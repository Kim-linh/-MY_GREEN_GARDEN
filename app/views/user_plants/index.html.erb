<div class="bg-garden"  style ="background-image:  linear-gradient(180deg, rgba(255,255,255,0.25) 0, rgba(255,255,255,1) 100%),url('<%= image_path "bg_jardin.jpg" %>')">
  <div class="container">
    <div class="garden-title">Bienvenue sur votre jardin</div>
    <p class="button text-center"><%= link_to "J'ajoute une plante ", new_user_plant_path %> </p>
  </div>
  <div class="container">
    <div class="row">
      <% @user_plants.each do |user_plant| %>
        <div class="col-12 col-md-4 text-center my-3">
          <div class="card h-100">
            <img class="card-img-top"  src="<%= cl_image_path user_plant.picture if user_plant.picture.present? %>">
            <div class="card-body">
              <h1 class="card-title"><%= user_plant.name %>
              </h1>
              <div class="card-text d-flex justify-content-around">
                <p class="my-auto">
<!--                   Mon Ã©tat :<% if user_plant.activities.present? == false %>
                    <%= user_plant.origin_health %>
                  <% else %>
                    <% activities = user_plant.activities %>
                    <% last_activity = activities.last %>
                    <%= last_activity.health %>
                  <% end %> -->
                </p>
<!--                 <p class="my-auto">
                  <strong>
                    J-<%= user_plant.waters.last.countdown %>
                  </strong> -->
                </p>
                </div>
                <!-- <h3> -->
<!--                   <strong>
                    Dernier arrosage le <%= user_plant.waters.last.created_at.strftime("%d, %h") %>
                  </strong> -->
                <!-- </h3> -->

              <p class="button"><%= link_to "Voir ma plante", user_plant_path(user_plant) %>
                <%= link_to user_plant_waters_path(user_plant), method: :post, class: "card-link" do %>
                    <i class="fas fa-tint"></i>
                <% end %></p>
              <p class="button"><%= link_to "<i class='fas fa-trash-alt'></i>".html_safe, user_plant_path(user_plant), method: :delete, data: { confirm: 'Are you sure?' } %>
                </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
