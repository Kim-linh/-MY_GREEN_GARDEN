<div class="container">
  <h1>Bienvenue sur votre jardin</h1>
  <p class="button"><%= link_to "CrÃ©er une plante ", new_user_plant_path %> </p>
  <div class="row">
    <% @user_plants.each do |user_plant| %>
      <div class=" col-12 col-sm-4 my-2">
        <div class="card h-100" style="width: 18rem;">
          <img class="card-img-top"  src="<%= cl_image_path user_plant.picture if user_plant.picture.present? %>" style="max-height: 300px">
          <div class="card-body">
            <h1 class="card-title"><%= user_plant.name %>
              <%= link_to user_plant_waters_path(user_plant), method: :post, class: "card-link" do %>
                  <i class="fas fa-tint"></i>
              <% end %>
            </h1>
            <p class="card-text">
              <% if user_plant.activities.present? == false %>
                <%= user_plant.origin_health %>
              <% else %>
                <% activities = user_plant.activities %>
                <% last_activity = activities.last %>
                <%= last_activity.health %>
              <% end %>
              <!--faire un input pour le bouton arrosage-->
              <p>
                <strong>
                  J-<%= user_plant.waters.last.countdown %>
                </strong>
              </p>
              <h3>
                <strong>
                  Dernier arrosage le <%= user_plant.waters.last.created_at.strftime("%d, %h") %>
                </strong>
              </h3>
            </p>
            <p class="button"><%= link_to "En savoir plus", user_plant_path(user_plant) %></p>
            <p class="button"><%= link_to "Je supprime ma plante", user_plant_path(user_plant), method: :delete, data: { confirm: 'Are you sure?' } %>
              </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

